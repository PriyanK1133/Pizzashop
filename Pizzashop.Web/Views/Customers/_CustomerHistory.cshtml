@model Pizzashop.Entity.ViewModel.CustomerHistoryVM;
<div class="d-flex flex-column gap-2 ">
    <div class="d-md-flex gap-2">
        <div class="d-flex col justify-content-between rounded  p-2 bg-white mb-2">
            <span>Name</span>
            <span><strong>@Model.Name</strong></span>
        </div>
        <div class="d-flex col justify-content-between rounded  p-2 bg-white ">
            <span>Average Bill</span>
            <span><strong>Rs. @Model.AverageBill</strong></span>
        </div>
    </div>
    <div class="d-md-flex gap-2">
        <div class="d-flex col justify-content-between rounded  p-2 bg-white mb-2">
            <span>Mobile Number</span>
            <span><strong>@Model.MobileNumber</strong></span>
        </div>
        <div class="d-flex col justify-content-between rounded  p-2 bg-white ">
            <span>Coming Since</span>
            <span><strong>@Model.ComingSince</strong></span>
        </div>
    </div>
    <div class="d-md-flex gap-2">
        <div class="d-flex col justify-content-between rounded  p-2 bg-white mb-2">
            <span>Max Order</span>
            <span><strong>Rs. @Model.MaxOrder</strong></span>
        </div>
        <div class="d-md-flex col justify-content-between rounded  p-2  bg-white ">
            <span>Visits</span>
            <span><strong>@Model.Visits</strong></span>
        </div>
    </div>
    <div class=" overflow-y-auto" style="height: 300px; ">
        <table class="table table-striped table-hover">
            <thead style="position: sticky; top: 0;">
                <tr>
                    <th>Order Date</th>
                    <th>Order Type</th>
                    <th>Payment</th>
                    <th>Items</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.CustomerOrders)
                {
                    <tr>
                        <td>@order.OrderDate</td>
                        <td>@order.OrderType</td>
                        <td>@order.Payment</td>
                        <td>@order.Items</td>
                        <td>Rs. @order.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>