@model Pizzashop.Entity.ViewModel.CustomerDetailsVM;

<form id="menu-customer-details-form" class="w-100">
    <input type="hidden" asp-for="CustomerId">
    <input type="hidden" value="@Model.Id" asp-for="Id">
    <input type="hidden" asp-for="TableCapacity">
    <input type="hidden" asp-for="SectionId">
    <input type="hidden" asp-for="IsWaiting">
    <div class="row">
        <div class="mb-2">
            <div class="form-floating ">
                <input asp-for="Name" class="form-control" placeholder="Email*">
                <label asp-for="Name">Name*</label>
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-2">
            <div class="form-floating ">
                <input asp-for="Phone" class="form-control" placeholder="Mobile Number*">
                <label asp-for="Phone">Mobile Number*</label>
            </div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="col-md mb-2">
            <div class="form-floating">
                <input asp-for="NumberOfPerson" class="form-control" placeholder="No. of Person(s)*">
                <label asp-for="Phone">No. of Person(s)*</label>
            </div>
            <span asp-validation-for="NumberOfPerson" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="mb-2">
            <div class="form-floating ">
                <input asp-for="Email" class="form-control" placeholder="Email*">
                <label asp-for="Email">Email*</label>
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="modal-footer border-0">
        <button type="submit" id="submit-btn" class="btn btn-primary bg-header rounded-1 mb-2 me-2">Save</button>
        <button type="reset" class="btn btn-outline-header rounded-1 mb-2 reset-menu-customer-details"
            data-bs-dismiss="modal">Cancel</button>
    </div>
</form>

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
